<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/margin_default"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_player_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_player_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>


        <CheckBox
            android:id="@+id/cnf_auto_assign_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cnf_auto_assign_label"
            android:checked="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_margin="@dimen/margin_default"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_werewolf_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_werewolf_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_villager_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_villager_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_seer_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_seer_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_doctor_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_doctor_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_hunter_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_hunter_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_witch_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_witch_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_priest_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_priest_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/SetupRoleCountText"
                android:text="@string/cnf_amor_count_label"
                />

            <org.faudroids.werewolf.ui.NumberPickerView
                android:id="@+id/cnf_amor_count_picker"
                style="@style/SetupRoleCountPicker"
                />

        </LinearLayout>

        <Button
            android:id="@+id/cnf_start_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cnf_start_btn_label"
            android:background="@drawable/selector_accent"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_default"
            />

    </LinearLayout>

</ScrollView>
